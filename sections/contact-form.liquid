{{ 'section-contact-form.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    background-image: url('{{ "Rectangle 15.svg" | asset_url }}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    position: relative;
    width: 100vw;
    margin-left: calc(-50vw + 50%);
  }

  .contact-form-container {
    display: flex;
    max-width: 1440px;
    margin: 0 auto;
    padding: 0 20px;
    gap: 40px;
    align-items: flex-start;
    position: relative;
    min-height: 650px;
    height: 650px;
    overflow: visible;
  }

  .contact-form-left {
    flex: 1;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-left: 80px;
  }

  .form-title-decoration {
    display: block;
    margin-bottom: 20px;
    width: 368.54px;
    height: 69.66px;
  }

  .form-headline {
    font-size: 2.5rem;
    font-weight: bold;
    margin-bottom: 20px;
    color: #000;
  }

  .form-subtext {
    font-size: 20px;
    line-height: 1.6;
    margin-bottom: 30px;
    color: #666;
  }

  .form-main-image {
    width: 670px;
    height: 456px;
    object-fit: contain;
    z-index: -1;
    position: relative;
  }

  .contact-form-right {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
  }

  .contact__button {
    align-self: flex-end;
    margin-bottom: 20px;
  }

  .contact__button .button {
    background-image: url('{{ "form button.svg" | asset_url }}');
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    border: none;
    min-height: 50px;
    color: transparent;
    text-indent: -9999px;
    width: 150px;
  }

  .form-flower {
    width: 251px;
    height: 234.83px;
    position: absolute;
    bottom: -50px;
    right: 0;
    z-index: 1;
  }

  .form-flower-left {
    width: 670px;
    height: 420px;
    position: absolute;
    bottom: -20px;
    left: 120px;
    z-index: 1;
  }

  .field__input {
    border: none !important;
    border-bottom: 2px solid #000 !important; /* bottom-only underline to match image */
    border-radius: 0 !important;
    background: transparent !important;
    color: #000000 !important;
    padding: 12px 0 8px 0 !important; /* top/right/bottom/left */
    width: 100% !important;
    margin-bottom: 22px !important;
    font-size: 16px !important;
  }

  .field__input::placeholder {
    color: #000000 !important;
    opacity: 1 !important;
  }

  .field__input:focus {
    border: none !important;
    box-shadow: none !important;
    outline: none !important;
  }

  /* show labels above inputs and style like the design */
  .field__label {
    display: block !important;
    font-weight: 700 !important;
    font-size: 14px !important;
    color: #000000 !important;
    margin-bottom: 8px !important;
    letter-spacing: 0.2px !important;
  }

  .field {
    margin-bottom: 0 !important;
    border: none !important;
    background: transparent !important; /* remove boxed background */
    border-radius: 0 !important;
    padding: 0 !important;
    box-shadow: none !important;
  }

  .contact__button .button {
    background-image: url('{{ "form button.svg" | asset_url }}') !important;
    background-size: contain !important;
    background-repeat: no-repeat !important;
    background-position: center !important;
    border: none !important;
    min-height: 60px !important;
    width: 200px !important;
    color: transparent !important;
    text-indent: -9999px !important;
    cursor: pointer !important;
    margin-top: 20px !important;
  }

  /* remove grey background behind button and any extra shadow */
  .contact__button {
    background: transparent !important;
    padding: 0 !important;
    box-shadow: none !important;
  }
  .contact__button .button {
    background-color: transparent !important;
    box-shadow: none !important;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  @media screen and (max-width: 1024px) {
    .contact-form-container {
      max-width: 100%;
      padding: 0 15px;
      gap: 30px;
      min-height: auto;
      height: auto;
    }
    .contact-form-left {
      padding-left: 40px;
    }
    .form-title-decoration {
      width: 280px;
      height: 53px;
    }
    .form-headline {
      font-size: 2rem;
    }
    .form-main-image {
      width: 500px;
      height: 340px;
    }
  }

  @media screen and (max-width: 749px) {
    .section-{{ section.id }}-padding {
      padding: 30px 0;
      margin-left: 0;
      width: 100%;
    }
    .contact-form-container {
      flex-direction: column;
      padding: 0 20px;
      gap: 20px;
      min-height: auto;
      height: auto;
    }
    .contact-form-left {
      text-align: center;
      align-items: center;
      padding-left: 0;
    }
    .form-title-decoration {
      width: 250px;
      height: 47px;
    }
    .form-headline {
      font-size: 1.8rem;
      margin-bottom: 15px;
    }
    .form-subtext {
      font-size: 16px;
      margin-bottom: 20px;
    }
    .form-main-image {
      width: 100%;
      max-width: 400px;
      height: auto;
    }
    .contact-form-right {
      align-items: stretch;
    }
    .contact__button {
      align-self: center;
    }
    .form-flower-left {
      width: 300px;
      height: 205px;
      bottom: -100px;
      left: 0;
    }
    .form-flower {
      width: 150px;
      height: 140px;
      bottom: -70px;
      right: 0;
    }
  }

  @media screen and (max-width: 480px) {
    .section-{{ section.id }}-padding {
      padding: 20px 0;
    }
    .contact-form-container {
      padding: 0 15px;
    }
    .form-title-decoration {
      width: 200px;
      height: 38px;
    }
    .form-headline {
      font-size: 1.5rem;
    }
    .form-subtext {
      font-size: 14px;
    }
    .form-main-image {
      max-width: 300px;
    }
    .contact__button .button {
      width: 150px;
      min-height: 50px;
    }
    .form-flower-left {
      width: 200px;
      height: 136px;
      bottom: -68px;
    }
    .form-flower {
      width: 100px;
      height: 93px;
      bottom: -46px;
    }
  }
{%- endstyle -%}

<div>
  <div class="section-{{ section.id }}-padding">
    <div class="contact-form-container">
      <div class="contact-form-left">
        {%- if section.settings.heading != blank -%}
          <img src="{{ 'form title.svg' | asset_url }}" alt="{{ section.settings.heading }}" class="form-title-decoration">
          
        {%- else -%}
          <h2 class="visually-hidden">{{ 'templates.contact.form.title' | t }}</h2>
        {%- endif -%}
        <div class="form-headline">Let's Create Something Beautiful Together</div>
        <div class="form-subtext">
          Have a question, custom order idea, or just want to say hello?<br>
          Fill out the form we'll get back to you within 24 hours.
        </div>
        <img src="{{ 'form image.svg' | asset_url }}" alt="" class="form-main-image">
      </div>
      <div class="contact-form-right">
    {%- liquid
      assign contact_form_class = 'isolate'
      if settings.animations_reveal_on_scroll
        assign contact_form_class = 'isolate scroll-trigger animate--slide-in'
      endif
    -%}
    {%- form 'contact', id: 'ContactForm', class: contact_form_class -%}
      {%- if form.posted_successfully? -%}
        <h2 class="form-status form-status-list form__message" tabindex="-1" autofocus>
          {{- 'icon-success.svg' | inline_asset_content -}}
          {{ 'templates.contact.form.post_success' | t }}
        </h2>
      {%- elsif form.errors -%}
        <div class="form__message">
          <h2 class="form-status caption-large text-body" role="alert" tabindex="-1" autofocus>
            {{- 'icon-error.svg' | inline_asset_content -}}
            {{ 'templates.contact.form.error_heading' | t }}
          </h2>
        </div>
        <ul class="form-status-list caption-large" role="list">
          <li>
            <a href="#ContactForm-email" class="link">
              {{ form.errors.translated_fields.email | capitalize }}
              {{ form.errors.messages.email }}
            </a>
          </li>
        </ul>
      {%- endif -%}
      <div class="field">
        <label class="field__label" for="ContactForm-name">Full Name*</label>
        <input
          class="field__input"
          autocomplete="name"
          type="text"
          id="ContactForm-name"
          name="contact[Full Name]"
          value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
          
        >
      </div>
      <div class="field">
        <label class="field__label" for="ContactForm-email">Email Address*</label>
        <input
          autocomplete="email"
          type="email"
          id="ContactForm-email"
          class="field__input"
          name="contact[email]"
          spellcheck="false"
          autocapitalize="off"
          value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
          aria-required="true"
        >
      </div>
      <div class="field">
        <label class="field__label" for="ContactForm-phone">Phone*</label>
        <input
          type="tel"
          id="ContactForm-phone"
          class="field__input"
          autocomplete="tel"
          name="contact[Phone]"
          pattern="[0-9\-]*"
          value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
          
        >
      </div>
      <div class="field">
        <label class="field__label" for="ContactForm-subject">Subject</label>
        <input
          type="text"
          id="ContactForm-subject"
          class="field__input"
          name="contact[Subject]"
          
        >
      </div>
      <div class="contact__button">
        <button type="submit" class="button">
          {{ 'templates.contact.form.send' | t }}
        </button>
      </div>
    {%- endform -%}
      </div>
      <img src="{{ 'form image.svg' | asset_url }}" alt="" class="form-flower-left">
      <img src="{{ 'form flower.svg' | asset_url }}" alt="" class="form-flower">
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.contact-form.name",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "t:sections.contact-form.settings.title.default",
      "label": "t:sections.contact-form.settings.title.label"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        },
        {
          "value": "hxl",
          "label": "t:sections.all.heading_size.options__4.label"
        },
        {
          "value": "hxxl",
          "label": "t:sections.all.heading_size.options__5.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "t:sections.contact-form.presets.name"
    }
  ]
}
{% endschema %}
