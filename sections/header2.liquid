<script>
function toggleSearch() {
  const searchForm = document.getElementById('searchForm');
  const searchToggle = document.querySelector('.header2-search-toggle');
  
  if (searchForm.style.display === 'none') {
    searchForm.style.display = 'flex';
    searchToggle.style.display = 'none';
    searchForm.querySelector('.header2-search-input').focus();
  } else {
    searchForm.style.display = 'none';
    searchToggle.style.display = 'flex';
  }
}

// Hide search when clicking outside
document.addEventListener('click', function(e) {
  const searchForm = document.getElementById('searchForm');
  const searchToggle = document.querySelector('.header2-search-toggle');
  const header2Left = document.querySelector('.header2-left');
  
  if (!header2Left.contains(e.target) && searchForm.style.display === 'flex') {
    searchForm.style.display = 'none';
    searchToggle.style.display = 'flex';
  }
});

// Update cart count
function updateCartCount() {
  fetch('/cart.js')
    .then(response => response.json())
    .then(cart => {
      console.log('Cart items:', cart.item_count);
      const cartLink = document.getElementById('cart-icon-header2');
      let bubble = cartLink.querySelector('.cart-count-bubble');
      
      if (cart.item_count > 0) {
        if (!bubble) {
          bubble = document.createElement('div');
          bubble.className = 'cart-count-bubble';
          bubble.style.cssText = 'position: absolute; top: 6px; right: 6px; background-color: #dc2626; color: white; border-radius: 50%; width: 16px; height: 16px; display: flex; align-items: center; justify-content: center; font-size: 10px; font-weight: 600; line-height: 1;';
          cartLink.appendChild(bubble);
        }
        bubble.innerHTML = cart.item_count;
        bubble.style.display = 'flex';
      } else {
        if (bubble) {
          bubble.style.display = 'none';
        }
      }
    })
    .catch(error => console.log('Cart fetch error:', error));
}

// Auto-update cart
setInterval(updateCartCount, 2000);
document.addEventListener('DOMContentLoaded', updateCartCount);

// Manual test function
window.testCart = function() {
  updateCartCount();
};
</script>

