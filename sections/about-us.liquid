{% schema %}
{
  "name": "About Us",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "About Our Brand"
    },
    {
      "type": "richtext",
      "id": "description_1",
      "label": "Main Description",
      "default": "<p>What started as a love for creativity and craftsmanship has grown into a boutique that celebrates individuality.</p>"
    },
    {
      "type": "richtext",
      "id": "description_2",
      "label": "Secondary Description",
      "default": "<p>At Salty Bulldog Boutique, we bring your ideas to life whether it's a baby's first outfit, a family matching tee, or a personalised gift that stands out.</p>"
    },
    {
      "type": "text",
      "id": "highlight_text",
      "label": "Highlighted Quote",
      "default": "Every design is custom-made with premium materials and hand-finished details."
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image (Optional)"
    }
  ]
}
{% endschema %}

<style>
  .about-us-section {
    background-color: #f5f0eb;
    padding: 60px 40px;
  }

  .about-us-container {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .about-us-heading {
    color: #0066cc;
    font-size: 32px;
    font-weight: bold;
    margin-bottom: 30px;
    font-family: 'Comic Sans MS', cursive;
  }

  .about-us-text {
    color: #333;
    font-size: 16px;
    line-height: 1.6;
    margin-bottom: 25px;
  }

  .about-us-text p {
    margin: 0;
  }

  .union-container {
    margin: 40px auto;
    max-width: 500px;
    position: relative;
  }

  .union-svg {
    width: 100%;
    height: auto;
  }

  .highlight-text {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: #671295;
    font-size: 14px;
    font-weight: bold;
    line-height: 1.5;
    margin: 0;
    text-align: center;
    padding: 20px;
  }

  .vector-image {
    position: absolute;
    bottom: -10px;
    right: -10px;
    width: 60px;
    height: auto;
  }

  .hero-image {
    margin-top: 40px;
    max-width: 100%;
    height: auto;
    border-radius: 8px;
  }

  @media (max-width: 768px) {
    .about-us-section {
      padding: 40px 20px;
    }

    .about-us-heading {
      font-size: 24px;
    }

    .about-us-text {
      font-size: 14px;
    }

    .union-container {
      margin: 30px auto;
    }

    .highlight-text {
      font-size: 16px;
      padding: 15px;
    }

    .vector-image {
      width: 40px;
      bottom: -5px;
      right: -5px;
    }
  }
</style>

<section class="about-us-section">
  <div class="about-us-container">
    <h2 class="about-us-heading">{{ section.settings.heading }}</h2>
    
    <div class="about-us-text">
      {{ section.settings.description_1 }}
    </div>

    <div class="about-us-text">
      {{ section.settings.description_2 }}
    </div>

    <div class="union-container">
      <img src="{{ 'Union.svg' | asset_url }}" alt="" class="union-svg">
      <p class="highlight-text">{{ section.settings.highlight_text }}</p>
    </div>

    {% if section.settings.hero_image %}
      <img src="{{ section.settings.hero_image | img_url: '600x400' }}" alt="About Us" class="hero-image">
    {% endif %}
  </div>
</section>