<section id="section-{{ section.id }}" class="our-categories color-{{ section.settings.color_scheme }}" style="padding-top: {{ section.settings.padding_top }}px; padding-bottom: {{ section.settings.padding_bottom }}px;">
	<div class="page-width">
		{% if section.settings.title != blank %}
			<h2 class="categories-title">{{ section.settings.title }}</h2>
		{% endif %}

		<div class="categories-grid">
			{% for block in section.blocks %}
				{% assign icon_url = '' %}
				{% case block.settings.title %}
					{% when 'Baby & Kids' %}
						{% assign icon_url = 'BabyKids.svg' | asset_url %}
					{% when 'Custom T-Shirts' %}
						{% assign icon_url = 'Custom Tshirts.svg' | asset_url %}
					{% when 'Embroidery Designs' %}
						{% assign icon_url = 'Emboriedary Designs.svg' | asset_url %}
					{% when 'Gift Ideas' %}
						{% assign icon_url = 'GiftIdeas.svg' | asset_url %}
					{% when 'Family Sets' %}
						{% assign icon_url = 'Familysets.svg' | asset_url %}
				{% endcase %}
				<a href="{{ block.settings.link }}" class="category-item" {% if block.settings.open_in_new_window %} target="_blank" rel="noopener" {% endif %}>
					{% if block.settings.icon != blank %}
						<img src="{{ block.settings.icon | image_url: width: 156 }}" alt="{{ block.settings.title }}" class="category-icon" />
					{% elsif icon_url != '' %}
						<img src="{{ icon_url }}" alt="{{ block.settings.title }}" class="category-icon" />
					{% else %}
						<div class="category-placeholder" aria-hidden="true"></div>
					{% endif %}
					<div class="category-label">{{ block.settings.title }}</div>
				</a>
			{% endfor %}
		</div>

		{% if section.settings.show_view_all and section.settings.button_label != blank and section.settings.button_link != blank %}
			<div class="categories-cta">
				<a href="{{ section.settings.button_link }}" class="btn btn-outline">{{ section.settings.button_label }}</a>
			</div>
		{% endif %}
	</div>

	<div class="categories-zigzag" aria-hidden="true"></div>
</section>

{% schema %}
{
	"name": "Categories",
	"settings": [
		{
			"type": "text",
			"id": "title",
			"label": "Title",
			"default": "Our Categories"
		},
		{
			"type": "select",
			"id": "color_scheme",
			"label": "Color scheme",
			"options": [
				{ "value": "background-1", "label": "Background 1" },
				{ "value": "background-2", "label": "Background 2" }
			],
			"default": "background-1"
		},
		{
			"type": "checkbox",
			"id": "show_view_all",
			"label": "Show CTA button",
			"default": true
		},
		{
			"type": "text",
			"id": "button_label",
			"label": "Button label",
			"default": "Explore All"
		},
		{
			"type": "url",
			"id": "button_link",
			"label": "Button link",
			"default": "/collections/all"
		},
		{
			"type": "number",
			"id": "padding_top",
			"label": "Padding top (px)",
			"default": 48
		},
		{
			"type": "number",
			"id": "padding_bottom",
			"label": "Padding bottom (px)",
			"default": 48
		}
	],
	"blocks": [
		{
			"type": "column",
			"name": "Category",
			"settings": [
				{ "type": "text", "id": "title", "label": "Title", "default": "Category" },
				{ "type": "image_picker", "id": "icon", "label": "Icon image" },
				{ "type": "url", "id": "link", "label": "Link", "default": "/collections/all" },
				{ "type": "checkbox", "id": "open_in_new_window", "label": "Open in new window", "default": false }
			]
		}
	],
	"max_blocks": 10,
	"presets": [
		{
			"name": "Categories",
			"category": "Sections",
			"blocks": [
				{
					"type": "column",
					"settings": {
						"title": "Baby & Kids",
						"link": "/collections/baby-kids"
					}
				},
				{
					"type": "column",
					"settings": {
						"title": "Custom T-Shirts",
						"link": "/collections/custom-tshirts"
					}
				},
				{
					"type": "column",
					"settings": {
						"title": "Embroidery Designs",
						"link": "/collections/embroidery-designs"
					}
				},
				{
					"type": "column",
					"settings": {
						"title": "Gift Ideas",
						"link": "/collections/gift-ideas"
					}
				},
				{
					"type": "column",
					"settings": {
						"title": "Family Sets",
						"link": "/collections/family-sets"
					}
				}
			]
		}
	]
}
{% endschema %}
