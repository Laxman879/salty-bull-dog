{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-services-section-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
  }

  .ai-services-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-services-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.header_alignment }};
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-services-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.title_spacing }}px;
  }

  .ai-services-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
  }

  .ai-services-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ block.settings.column_gap }}px;
  }

  .ai-service-card-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.card_border_radius }}px;
    min-height: {{ block.settings.card_height }}px;
  }

  .ai-service-card__background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-service-card__placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-service-card__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
  }

  .ai-service-card__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
  }

  .ai-service-card__content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    justify-content: {{ block.settings.content_vertical_alignment }};
    align-items: {{ block.settings.content_horizontal_alignment }};
    text-align: {{ block.settings.text_alignment }};
    padding: {{ block.settings.content_padding }}px;
    min-height: {{ block.settings.card_height }}px;
    gap: {{ block.settings.text_spacing }}px;
  }

  .ai-service-card__heading-{{ ai_gen_id }} {
    color: {{ block.settings.card_heading_color }};
    font-size: {{ block.settings.card_heading_size }}px;
    margin: 0;
    max-width: 100%;
    word-wrap: break-word;
  }

  .ai-service-card__text-{{ ai_gen_id }} {
    color: {{ block.settings.card_text_color }};
    font-size: {{ block.settings.card_text_size }}px;
    margin: 0;
    max-width: 100%;
    word-wrap: break-word;
  }

  .ai-service-card__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .ai-service-card__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};
    color: {{ block.settings.button_hover_text_color }};
  }

  @media screen and (max-width: 989px) {
    .ai-services-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-services-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-services-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-services-subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtitle_size | times: 0.9 }}px;
    }

    .ai-service-card__content-{{ ai_gen_id }} {
      padding: {{ block.settings.content_padding | times: 0.7 }}px;
    }

    .ai-service-card__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.card_heading_size | times: 0.8 }}px;
    }

    .ai-service-card__text-{{ ai_gen_id }} {
      font-size: {{ block.settings.card_text_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-services-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-services-container-{{ ai_gen_id }}">
    {% if block.settings.section_title != blank or block.settings.section_subtitle != blank %}
      <div class="ai-services-header-{{ ai_gen_id }}">
        {% if block.settings.section_title != blank %}
          <h2 class="ai-services-title-{{ ai_gen_id }}">{{ block.settings.section_title }}</h2>
        {% endif %}
        {% if block.settings.section_subtitle != blank %}
          <p class="ai-services-subtitle-{{ ai_gen_id }}">{{ block.settings.section_subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-services-grid-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign image_key = 'service_' | append: i | append: '_image'
          assign heading_key = 'service_' | append: i | append: '_heading'
          assign text_key = 'service_' | append: i | append: '_text'
          assign button_text_key = 'service_' | append: i | append: '_button_text'
          assign button_link_key = 'service_' | append: i | append: '_button_link'

          assign service_image = block.settings[image_key]
          assign service_heading = block.settings[heading_key]
          assign service_text = block.settings[text_key]
          assign service_button_text = block.settings[button_text_key]
          assign service_button_link = block.settings[button_link_key]
        %}

        <div class="ai-service-card-{{ ai_gen_id }}">
          {% if service_image %}
            <img
              src="{{ service_image | image_url: width: 800 }}"
              alt="{{ service_image.alt | escape }}"
              loading="lazy"
              width="{{ service_image.width }}"
              height="{{ service_image.height }}"
              class="ai-service-card__background-{{ ai_gen_id }}"
            >
          {% else %}
            <div class="ai-service-card__placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}

          <div class="ai-service-card__overlay-{{ ai_gen_id }}"></div>

          <div class="ai-service-card__content-{{ ai_gen_id }}">
            {% if service_heading != blank %}
              <h3 class="ai-service-card__heading-{{ ai_gen_id }}">{{ service_heading }}</h3>
            {% endif %}

            {% if service_text != blank %}
              <p class="ai-service-card__text-{{ ai_gen_id }}">{{ service_text }}</p>
            {% endif %}

            {% if service_button_text != blank %}
              <a
                href="{{ service_button_link }}"
                class="ai-service-card__button-{{ ai_gen_id }}"
              >
                {{ service_button_text }}
              </a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

